<body>
    <img id="backg" src="/img/shaw.jpeg" alt="Background">
    <div class="nav">
        <div class="block">
            <img src="/img/logo.jpg" alt="Logo" width="50" height="50" onclick="location.href='/'">
            <h2>Garama</h2>
        </div>
        <a>Logging</a>
    </div>
    <div class="cont">
        <%if(locals.error){%>
            <div class="row spec">
                <h1><%=locals.error%></h1>
            </div>
        <%}%>
        <form id="form" action="/loginer" method="post">
            <img src="/img/logo.jpg" width="150" height="150">
            <div class="row">
                <input name="username" placeholder="Username" type="text">
            </div>
            <div class="row">
                <input name="password" placeholder="Password" type="password">
            </div>
        </form>
        <div class="row">
            <button onclick="location.href='/regist'">Register</button>
            <button onclick="document.getElementById('form').submit()">Login</button>
        </div>
    </div>
